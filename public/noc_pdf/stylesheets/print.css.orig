/* Page Style
_____________________________________________________________________________ */

@page {
	size: 7.5in 9.25in;
	margin: 0.75in;
}

/* Define Left Headers and Footers
_____________________________________________________________________________ */

@page :left {
  @top-left {
    font: 10pt "Akkurat-Regular", serif;
    content: "The Nature of Code";
    vertical-align: bottom;
    padding-bottom: 2em;
  }

  @bottom-left {
    font: 11pt "Akkurat-Regular", serif;
    content: counter(page);
    padding-top: 2em;
    vertical-align: top;
  }
}

/* Define Right Headers and Footers
_____________________________________________________________________________ */

@page :right {
  @top-right {
    font: 10pt "Akkurat-Regular", serif;
    content: string(doctitle);
    vertical-align: bottom;
    padding-bottom: 2em;
  }

  @bottom-right {
    font: 10pt "Akkurat-Regular", serif;
    content: counter(page);
    text-align: right;
    vertical-align: top;
    padding-top: 2em;
  }
}

h2 { string-set: doctitle content() }

/* Insert page number after all links
_____________________________________________________________________________ */

a[href]::after {
    content: " (See page " target-counter(attr(href), page) ")"
}

/* Fonts
_____________________________________________________________________________ */
h1 {
	font-size: 250%;
	line-height: 1em;
	font-style: normal;
	margin-bottom:1.3em;
	margin-top: 0.4em;
}

h2 {
	font-size: 175%;
	line-height: 1em;
	font-style: normal;
}

h3 {
	font-size: 120%;
}

h4,h5 {
	font-size: 100%;
}

h1, h2, h3, h4, h5 {
	font-family: 'Akkurat-Bold', Helvetica, Arial, sans-serif;
	color: #222;
	font-weight: normal;
}

h1, h2, h3, h4, h5, h6 {
  clear: both;
}

h3, h4, h5, h6 {
  line-height: 1.317em;
  margin: 1.6em 0 0.5em;
}

p {
	font-size: 100%;
	line-height: 1.35em;
	letter-spacing:0.03em;
}

/* Default Elements 
_____________________________________________________________________________ */

blockquote {
	font-size: 1.0em;
	margin: 0em 4em 2em 4em;
	font-style: italic;
	line-height: 1.65em;
	position: relative;
}

blockquote span.attribution {
	display: block;
	font-style: normal;
	font-size: 0.6em;
}

blockquote .quote_start {
	position: absolute;
	top: 0.1em;
	left: -0.5em;
	font-size: 2em;
	font-family: 'Akkurat-Bold', Helvetica;
}

/* Boxes
_____________________________________________________________________________ */

.breakout_box {
	background-color: #D7D7D7;
	padding: 20px;
}

img {
	max-width: 100%;
}

.screenshot img {
	width: 100%;
	margin: 0px;
	border:1px solid gray;
	// Need a magic solution for border side borders to be partial, not extend all the way to top
}

/* Page Breaks
_____________________________________________________________________________ */

img, .note, .example, .tip, .breakout_box, .half-width, .half-width-right {
	page-break-inside: avoid;
}

/* Code Formatting
_____________________________________________________________________________ */

/* Div wrapper for code blocks */
.code-block {
  font-size: 80%;
  margin: 2em 1em;
}

.example .code-block {
  /*margin-left: 0em;*/
  /*margin-right: 0em;*/
}

.code-comment-line {
  border-top: 1px dashed #aaa;
}

